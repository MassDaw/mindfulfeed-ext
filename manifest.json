{
  "manifest_version": 3,
  "name": "MindfulFeed",
  "version": "1.0.0",
  "description": "Detecta cuando pasas demasiado tiempo en redes sociales y te muestra mensajes motivacionales",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.reddit.com/*",
    "*://*.facebook.com/*",
    "*://*.youtube.com/*",
    "*://*.tiktok.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.reddit.com/*",
        "*://*.facebook.com/*",
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*"
      ],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MindfulFeed",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
} 